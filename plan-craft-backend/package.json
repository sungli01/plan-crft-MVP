{
  "name": "plan-craft-backend",
  "version": "1.0.0",
  "description": "Plan-Craft Backend API Server",
  "type": "module",
  "main": "start.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node start.js",
    "build": "echo 'no build step needed'",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "migrate:cascade": "tsx scripts/run-migration.ts"
  },
  "keywords": [
    "plan-craft",
    "api",
    "hono"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.73.0",
    "@hono/node-server": "^1.8.0",
    "@hono/node-ws": "^1.0.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^17.2.4",
    "drizzle-orm": "^0.29.5",
    "hono": "^4.0.0",
    "jsonwebtoken": "^9.0.2",
    "marked": "^17.0.2",
    "openai": "^6.22.0",
    "postgres": "^3.4.8",
    "pptxgenjs": "^4.0.1",
    "tsx": "^4.19.0",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.13",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}
